<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="actorInfo"
            type="com.geekbrains.team.domain.actors.model.ActorInformation" />
        <variable
            name="listener"
            type="com.geekbrains.team.filmlibrary.adapters.OnItemSelectedListener" />
        <variable
            name="useCasesEnum"
            type="com.geekbrains.team.filmlibrary.adapters.UseCasesEnum" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nightBackgroundSearchTopBar"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                tools:ignore="NewApi">

                <TextView
                    android:id="@+id/main_tv"
                    style="@style/Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nightTextPrimary" />
            </Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abl">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/photo_iv"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        app:poster="@{actorInfo.profilePath}"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/actor_name"
                            style="@style/Headline2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{actorInfo.name}" />

                        <TextView
                            style="@style/Subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Known for" />

                        <TextView
                            android:id="@+id/known_for"
                            style="@style/Subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{actorInfo.knownFor}" />

                        <TextView
                            style="@style/Subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Place and date of birth:" />

                        <TextView
                            style="@style/Subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{actorInfo.birthday}" />

                        <TextView
                            style="@style/Subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{actorInfo.placeOfBirth}" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/IconSecondary"
                    app:layout_constraintTop_toBottomOf="@id/information" />

                <TextView
                    android:id="@+id/description_tv"
                    style="@style/Subtitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{actorInfo.biography}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1" />


                <View

                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/IconSecondary"
                    app:layout_constraintTop_toBottomOf="@id/description_tv" />

                <TextView
                    android:id="@+id/acting_in_movies"
                    style="@style/Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:gravity="bottom"
                    android:text="Acting in movies"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line2" />

                <ImageButton
                    android:id="@+id/acting_in_movies_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_right"
                    android:onClick="@{() -> listener.openExtensionFragmentWithParameter(useCasesEnum.ACTING_IN_MOVIES.name(), actorInfo.id)}"
                    app:layout_constraintBottom_toBottomOf="@id/acting_in_movies"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/credits_cast_movies_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/acting_in_movies" />

                <TextView
                    android:id="@+id/acting_in_tvshows"
                    style="@style/Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:gravity="bottom"
                    android:text="Acting in TV shows"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/credits_cast_movies_rv" />

                <ImageButton
                    android:id="@+id/acting_in_tvshows_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_right"
                    android:onClick="@{() -> listener.openExtensionFragmentWithParameter(useCasesEnum.ACTING_IN_TV_SHOWS.name(), actorInfo.id)}"
                    app:layout_constraintBottom_toBottomOf="@id/acting_in_tvshows"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/credits_cast_tvshows_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/acting_in_tvshows" />

                <TextView
                    android:id="@+id/credits_crew_movies_tv"
                    style="@style/Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:gravity="bottom"
                    android:text="Product movies"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/credits_cast_tvshows_rv" />

                <ImageButton
                    android:id="@+id/credits_crew_movies_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_right"
                    android:onClick="@{() -> listener.openExtensionFragmentWithParameter(useCasesEnum.PRODUCT_MOVIES.name(), actorInfo.id)}"
                    app:layout_constraintBottom_toBottomOf="@id/credits_crew_movies_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/credits_crew_movies_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/credits_crew_movies_tv" />

                <TextView
                    android:id="@+id/credits_crew_tvshows_tv"
                    style="@style/Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:gravity="bottom"
                    android:text="Product TV shows"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/credits_crew_movies_rv" />

                <ImageButton
                    android:id="@+id/credits_crew_tvshows_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chevron_right"
                    android:onClick="@{() -> listener.openExtensionFragmentWithParameter(useCasesEnum.PRODUCT_TV_SHOWS.name(), actorInfo.id)}"
                    app:layout_constraintBottom_toBottomOf="@id/credits_crew_tvshows_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/credits_crew_tvshows_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/credits_crew_tvshows_tv" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
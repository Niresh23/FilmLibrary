<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nightBackgroundLight</item>
        <item name="colorPrimaryDark">@color/nightBackgroundDark</item>
        <item name="colorAccent">@color/IconPrimary</item>
        <item name="android:textColorPrimary">@color/nightTextPrimary</item>
        <item name="android:textColorSecondary">@color/nightTextSecondary</item>
        <item name="android:windowBackground">@color/nightBackgroundDark</item>
        <item name="cardViewStyle">@style/cardStyle.Dark</item>
        <item name="tabBackgroundColor">@color/nightBackgroundLight</item>
        <item name="lineColor">@color/nightLineColor</item>
        <item name="backgroundSearchTopBarColor">@color/nightBackgroundSearchTopBar</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="cardStyle.Dark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/nightBackgroundLight</item>
    </style>

    <style name="Subtitle2" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
